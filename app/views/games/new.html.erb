<div class="text-center p-2" >
  <h1>New game</h1>

    <h2 class="list-inline-item p-2 border text-center bg-primary text-white">
        <% @letters.each do |letter|%>
        <%= letter.capitalize %>
        <% end %>
    </h2>

  <p>What is the longest word you can find ? </p>
    <form action="/score" method="post" data-turbo="false">
    <input name="letters" type="hidden" value=<%= @letters %> >
    <input type="text" name="answer" >
    <input type="submit" value="play!" class="btn btn-primary">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
